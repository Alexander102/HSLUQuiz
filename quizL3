        function loadRandomQuestions() {
            const selectedQuestions = [];
            while (selectedQuestions.length < 5) {
                const randomIndex = Math.floor(Math.random() * questionPool.length);
                if (!selectedQuestions.includes(randomIndex)) {
                    selectedQuestions.push(randomIndex);
                }
            }

            const questionContainer = document.getElementById('questions');
            questionContainer.innerHTML = '';

            selectedQuestions.forEach(index => {
                const questionData = questionPool[index];
                const questionDiv = document.createElement('div');
                questionDiv.className = 'question';
                questionDiv.innerHTML = `<p>${questionData.question}</p>`;
                questionData.options.forEach((option, i) => {
                    questionDiv.innerHTML += `<label><input type="radio" name="q${index}" value="${option.value}"> ${option.text}</label><br>`;
                });
                questionContainer.appendChild(questionDiv);
            });
        }

        function calculateScore() {
            const form = document.getElementById('surveyForm');
            const inputs = form.getElementsByTagName('input');
            let score = 0;
            let maxScore = 5;

            for (const input of inputs) {
                if (input.type === 'radio' && input.checked) {
                    score += parseInt(input.value);
                }
            }

            // Notenberechnung
            let grade;
            if (score === 5) {
                grade = "6.0 - Hervorragend";
            } else if (score === 4) {
                grade = "5.5 - Sehr gut";
            } else if (score === 3) {
                grade = "5.0 - Gut";
            } else if (score === 2) {
                grade = "4.5 - Befriedigend";
            } else if (score === 1) {
                grade = "4.0 - Genügend";
            } else {
                grade = "3.0 - Ungenügend";
            }

            const result = document.getElementById('result');
            result.innerHTML = `Deine Punktzahl: ${score}/${maxScore}<br>Deine Note: ${grade}`;
        }

        // Lade zufällige Fragen, sobald die Seite geladen wird
        window.onload = loadRandomQuestions;
    </script>
